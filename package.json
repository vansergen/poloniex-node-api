{
  "name": "poloniex-node-api",
  "version": "2.0.2",
  "description": "Poloniex Node.js API",
  "main": "build/index.js",
  "directories": {
    "lib": "build/src",
    "test": "test"
  },
  "engines": {
    "node": ">=10.18.1"
  },
  "type": "commonjs",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run prettier && npm run lint && npm run build && npm run prettier-write && npm run lint-fix",
    "postpublish": "rm -fr build",
    "coverage": "nyc npm test && nyc report --reporter=lcov",
    "coverage-ci": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "fresh-install": "rm -fr node_modules && rm -f package-lock.json && npm install",
    "lint": "eslint --ext .ts,.js ./",
    "lint-fix": "npm run lint -- --fix",
    "prettier": "prettier -c \"**/*.{js,md,ts,json}\"",
    "prettier-write": "npm run prettier -- --write",
    "generate-docs": "typedoc",
    "test": "mocha -r ts-node/register --full-trace --ui tdd --bail --extension ts",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vansergen/poloniex-node-api.git"
  },
  "keywords": [
    "Poloniex",
    "crypto",
    "exchange",
    "API"
  ],
  "author": "Sergey Bakulin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vansergen/poloniex-node-api/issues"
  },
  "homepage": "https://github.com/vansergen/poloniex-node-api#readme",
  "dependencies": {
    "@types/ws": "^7.2.6",
    "rpc-request": "^4.0.10",
    "ws": "^7.3.1",
    "snyk": "^1.319.2"
  },
  "devDependencies": {
    "@types/mocha": "^8.0.3",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "coveralls": "^3.1.0",
    "eslint": "^7.7.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mocha": "^8.1.1",
    "nock": "^13.0.4",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typedoc": "^0.18.0",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,js}": [
      "eslint --fix",
      "git add"
    ]
  },
  "funding": {
    "type": "Coinbase Commerce",
    "url": "https://commerce.coinbase.com/checkout/8e527468-c00a-49e9-aa1d-a08bf49d1686"
  },
  "snyk": true
}
